// 백준 1120: 문자열
// 알고리즘
// A의 위치를 옮기며 B와 비교한다.
// 다른 값이 제일 적은 값을 답으로 출력한다.
#include <iostream>
using namespace std;
string A, B;

int main() {
    cin >> A >> B;
    int ans = 51;
    for (int i = 0; i <= B.length() - A.length(); i++) {
        int cnt = 0;
        for (int j = 0; j < A.length(); j++) {
            if (B[j + i] != A[j])
                cnt++;
        }
        ans = min(cnt, ans);
    }
    cout << ans;
}
